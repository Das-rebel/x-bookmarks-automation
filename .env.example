# Server Configuration
PORT=3000
NODE_ENV=development

# API Security
API_KEY=your_secure_api_key_here

# X.com (Twitter) Credentials
X_USERNAME=your_x_username
X_PASSWORD=your_x_password

# Browser Configuration
HEADLESS=true  # Set to false for debugging browser
SLOW_MO=0     # Slow down Puppeteer operations by X ms
TIMEOUT=60000 # Global timeout in ms

# Scraping Configuration
MAX_BOOKMARKS=50
SCROLL_DELAY=1000
REQUEST_DELAY=200

# Optional: External Services
# BROWSERLESS_TOKEN=your_browserless_token
# OPENAI_API_KEY=your_openai_api_key
# SCRAPINGBEE_KEY=your_scrapingbee_key

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# CORS (comma-separated origins, or '*' for all)
ALLOWED_ORIGINS=*

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Connection (for migrations)
# Option 1: Use connection string
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# Option 2: Use individual parameters
# SUPABASE_DB_USER=postgres
# SUPABASE_DB_PASSWORD=your_password
# SUPABASE_DB_HOST=db.your-project-ref.supabase.co
# SUPABASE_DB_PORT=5432
# SUPABASE_DB_NAME=postgres

# SSL Configuration (required for Supabase)
PGSSLMODE=require

# Optional: External Services
# BROWSERLESS_TOKEN=your_browserless_token
# OPENAI_API_KEY=your_openai_api_key
# SCRAPINGBEE_KEY=your_scrapingbee_key
# CHROME_PATH=/path/to/chrome  # Only needed if Chrome isn't in default location

# Twitter/X API Configuration (Optional)
# TWITTER_SCRAPER_TOKEN=your_twitter_scraping_token
# TWITTER_USER_ID=your_twitter_user_id

# OpenAI Configuration (Optional for AI features)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo

# Cerebras Configuration (Optional)
# CEREBRAS_API_KEY=your_cerebras_api_key
